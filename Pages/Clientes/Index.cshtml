@page
@model ProjetoCRUD.Pages_Clientes.IndexModel

@{
    ViewData["Title"] = "Index";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<h1>Index</h1>

<p>
    <a asp-page="Create" class="btn btn-success" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Cadastrar Cliente</span></a>
</p>
<div class="container mt-5">
    <h1 class="text-center mb-4">Lista de Contatos</h1>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Clientes[0].Nome)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Clientes[0].Endereco)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Clientes[0].Telefone)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model.Clientes) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Endereco)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td class="text-center">
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-primary" data-toggle="modal"><i class="bi bi-pencil-fill"></i> <span>Edit</span></a> 
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-secondary" data-toggle="modal"><i class="bi bi-book-fill"></i> <span>Details</span></a> 
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger" data-toggle="modal"><i class="bi bi-person-x-fill"></i> <span>Delete</span></a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>